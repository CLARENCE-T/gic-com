<div class="mosaic_pics">
  <% @events.each do |event| %>
  <div class="event_card">
    <%= link_to event_path(event) do %>
      <%= cl_image_tag(event.pictures.first.image.key, alt: event.title, width: 400, height: 400, crop: :thumb, gravity: :face, dpr: 4.0) %>
    <% end %>
    <div class="event_title">
      <%= event.title %>
    </div>
  </div>
  <% end %>
</div>
