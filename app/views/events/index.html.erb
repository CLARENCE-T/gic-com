<div class="masonry-grid-events">
  <div class="grid-sizer-events"></div>


  <% @events.each_with_index do |event,idx| %>


    <% if (idx==0 || idx==4) %>
      <div class="masonry-item-events masonry-item-events-3">
        <%= link_to event_pictures_path(event) do %>
        <%= cl_image_tag(event.pictures.first.image.key, quality: 100 ,alt: event.description, data: {id: idx}, class: "o-zero") %>
        <div class="text">
          <h1> <%= event.title %> </h1>
          <p><%= event.subtitle %></p>
        </div>
      <% end %>
      </div>
    <% else %>
      <div class="masonry-item-events">
        <%= link_to event_pictures_path(event) do %>
          <%= cl_image_tag(event.pictures.first.image.key, quality: 100 ,alt: event.description, data: {id: idx}, class: "o-zero") %>
          <div class="text">
            <h1> <%= event.title %> </h1>
            <p><%= event.subtitle %></p>
          </div>
        <% end %>
      </div>
    <% end %>


    <% end %>
  </div>
</div>
