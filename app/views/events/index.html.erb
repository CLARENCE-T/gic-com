<div class="masonry-grid-events">
  <% @events.each_with_index do |event,idx| %>
    <%= link_to event_pictures_path(event) do %>
      <% if (idx==0 || idx==3) %>
        <%= cl_image_tag(event.pictures.first.image.key,width: 600, height: 600,crop: :thumb, gravity: :face, quality: 100, dpr: 4,alt: event.title, class: "masonry-item-events masonry-item-events-3 o-zero") %>
      <% else %>
        <%= cl_image_tag(event.pictures.first.image.key,width: 300, height: 300,crop: :thumb, gravity: :face, quality: 100, dpr: 4,alt: event.title, class: "masonry-item-events o-zero") %>
      <% end %>

      <div class="event_title center d-none">
        <h5> <%= event.title %> </h5>
        <p><%= event.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
