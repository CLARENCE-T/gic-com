<div class="title-albums">
  <h1>Albums Evenements</h1>
</div>

<div class="masonry-grid-events">
  <div class="grid-sizer-events"></div>
  <% @events.each_with_index do |event,idx| %>
    <% if (idx==0 || idx==4) %>
      <div class="masonry-item-events masonry-item-events-3">
        <%= link_to event_pictures_path(event) do %>
        <%= cl_image_tag(event.pictures.exists?(cover: true) ? event.pictures.where(cover: true).first.image.key : event.pictures.first.image.key, quality: 50 ,alt: event.description, data: {id: idx}, class: "o-zero") %>
          <div class="text">
            <h2><%= event.title %></h2>
            <h3><%= event.subtitle %></h3>
            <p><%= truncate event.description, length: 100 , :separator => ' '%></p>
          </div>
          <div class="pin">
            <h1> <%= event.title %> </h1>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="masonry-item-events">
        <%= link_to event_pictures_path(event) do %>
          <%= cl_image_tag(event.pictures.exists?(cover: true) ? event.pictures.where(cover: true).first.image.key : event.pictures.first.image.key, quality: 20 ,alt: event.description, data: {id: idx}, class: "o-zero") %>
          <div class="text">
            <p><%= truncate event.description, length: 50 , :separator => ' ' %></p>
          </div>
          <div class="pin">
            <h1> <%= event.title %> </h1>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
